<h1>Listing profils</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @profils.each do |profil| %>
      <tr>
        <td><%= profil.title %></td>
        <td><%= profil.description %></td>
        <td><%= link_to 'Modifier', edit_admin_profil_path(profil), method: :get %></td>
        <td><%= link_to 'Destroy', admin_profil_path(profil), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

