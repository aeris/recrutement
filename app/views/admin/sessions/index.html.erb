<h1>Listing sessions</h1>

<table>
    <thead>
    <tr>
        <th>PROFIL DE POSTE</th>
        <th>Title</th>
        <th>Begindate</th>
        <th>Enddate</th>
        <th>State</th>
        <th>Description</th>
    </tr>
    </thead>

    <tbody>
    <% @sessions.each do |session| %>
        <tr>
            <td><%= session.title %></td>
            <td><%= session.beginDate %></td>
            <td><%= session.endDate %></td>
            <td><%= session.state %></td>
            <td><%= session.description %></td>
            <td><%= link_to 'Edit', edit_admin_session_path(session) %></td>
            <td><%= link_to 'Destroy', admin_session_path(session), method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<br>

