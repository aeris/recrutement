<%- model_class = Session -%>
<div class="page-header">
  <center><h2> Les sessions en cours </h2></center>
</div>

<div class="span12">
  <div class="row-fluid">
    <% @sessions.each do |session| %>
        
        <div class="span6">
            <h3><%= session.title %></h3>
            <p>Date de cloture des candidatures : <b> <%= %> </b></p>
            <p> <%= session.description[0,250] %> </p>


<a href="http://0.0.0.0:3000/sessions/<%= session.id %>" class="btn btn-inverse"> Plus d'infos</a>
<%= link_to t('.new', :default => t("helpers.links.Postuler")),
            new_candidature_path,
            :class => 'btn btn-primary' %>



        </div>  

    <% end %>
  </div>
</div>
