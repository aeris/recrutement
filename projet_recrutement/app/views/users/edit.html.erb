        <%= f.text_field :user_mail %>
    </div>
    <div class="field">
        <%= f.label :user_state %><br>
        <%= f.text_field :user_state %>
    </div>
    <div class="field">
        <%= f.label :user_status %><br>
        <%= f.number_field :user_status %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>


